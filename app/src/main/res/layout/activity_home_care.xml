<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/back_button_in_activity_home_care"
        android:background="@android:color/transparent"
        android:text="뒤로"
        android:textSize="15dp"
        android:layout_width="60dp"
        android:layout_height="50dp" />
    <android.support.v7.widget.CardView
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:transitionName="card_view_transition"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title_text_view_in_activity_home_care"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="타이틀"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/period_text_view_in_activity_home_care"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="2017-11-08 17:24"
                android:textAlignment="center"
                />

            <ImageView
                android:layout_margin="10dp"
                android:transitionName="profile_image_transition"
                android:id="@+id/profile_image_view_in_activity_home_care"
                android:layout_gravity="center"
                android:background="#000000"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name_text_view_in_activity_home_care"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="★ 4.5"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:layout_marginTop="10dp"
                android:background="#222222"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="장소"
                    android:textAlignment="center"
                    android:layout_weight="3"
                    android:textSize="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/home_care_location_text_view_in_activity_home_care"
                    android:textAlignment="center"
                    android:text="서울"
                    android:textSize="17dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="급여"
                    android:textAlignment="center"
                    android:layout_weight="3"
                    android:textSize="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/home_care_pay_text_view_in_activity_home_care"
                    android:textAlignment="center"
                    android:text="n만원"
                    android:textSize="17dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="기간"
                    android:textAlignment="center"
                    android:layout_weight="3"
                    android:textSize="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/home_care_period_text_view_in_activity_home_care"
                    android:textAlignment="center"
                    android:text="yyyy-mm-dd ~ mm-dd"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textAlignment="center"
                    android:text="홈케어"
                    android:layout_weight="3"
                    android:textSize="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/home_care_care_type_text_view_in_activity_home_care"
                    android:text="타입"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:text="상세 내용 ..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:maxLines="4"/>

            <Button
                android:layout_marginTop="5dp"
                android:id="@+id/contact_button"
                android:background="@android:color/transparent"
                android:text="신청하기"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="#cdff6492"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>