<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.androidtown.homecare.Fragments.HomeCareFragment">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout_in_home_care_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/hidden_view_in_message_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:transitionName="card_view_transition"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@color/colorAccent"
                        android:layout_margin="10dp"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="진행 중인 홈케어"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/opponent_user_layout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_margin="10dp"
                                android:transitionName="profile_image_transition"
                                android:id="@+id/profile_image_view_in_fragment_home_care"
                                android:layout_gravity="center"
                                android:src="@drawable/profile_image_view_in_activity_home_care_image"
                                android:layout_width="60dp"
                                android:layout_height="60dp" />

                            <TextView
                                android:id="@+id/name_text_view_in_fragment_home_care"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/star_text_view_in_fragment_home_care"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_marginBottom="5dp"
                                android:id="@+id/title_text_view_in_fragment_home_care"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/upload_date_text_view_in_fragment_home_care"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:textAlignment="center" />

                            <TextView
                                android:textSize="14sp"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <Button
                                    android:id="@+id/message_button_in_fragment_home_care"
                                    android:textColor="#292929"
                                    android:layout_weight="1"
                                    android:background="@android:color/transparent"
                                    android:text="대화"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <Button
                                    android:id="@+id/estimation_button_in_fragment_home_care"
                                    android:textColor="#292929"
                                    android:layout_weight="1"
                                    android:background="@android:color/transparent"
                                    android:text="평가"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <Button
                                    android:id="@+id/cancel_button_in_fragment_home_care"
                                    android:textColor="#292929"
                                    android:layout_weight="1"
                                    android:background="@android:color/transparent"
                                    android:text="중단"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>



                    </LinearLayout>

                    <TextView
                        android:background="#222222"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp" />
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:text="장소"
                            android:textAlignment="center"
                            android:layout_weight="3"
                            android:textSize="15sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/home_care_location_text_view_in_fragment_home_care"
                            android:textAlignment="center"
                            android:text="서울"
                            android:textSize="15sp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:text="급여"
                            android:textAlignment="center"
                            android:layout_weight="3"
                            android:textSize="15sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/home_care_pay_text_view_in_fragment_home_care"
                            android:textAlignment="center"
                            android:text="n만원"
                            android:textSize="15sp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:text="기간"
                            android:textAlignment="center"
                            android:layout_weight="3"
                            android:textSize="15sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/home_care_period_text_view_in_fragment_home_care"
                            android:textAlignment="center"
                            android:text="yyyy-mm-dd ~ mm-dd"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textAlignment="center"
                            android:text="홈케어"
                            android:layout_weight="3"
                            android:textSize="15sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/home_care_care_type_text_view_in_fragment_home_care"
                            android:text="타입"
                            android:textAlignment="center"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/comment_text_view_in_fragment_home_care"
                        android:padding="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:text="상세 내용 ..."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="80dp"
                        android:maxLines="4"/>

                    <Button
                        android:visibility="gone"
                        android:text="신청자 보기"
                        android:layout_marginTop="5dp"
                        android:id="@+id/contact_button_in_fragment_home_care"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/none_care_view_in_message_fragment"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:textSize="20dp"
            android:text="진행 중인 케어가 없습니다."
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</FrameLayout>
